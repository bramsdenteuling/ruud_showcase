= form_for :email, :url => {:controller => 'home', :action => 'send_mail'} do |f|
  = f.label :name
  %br
  = f.text_field :name, :size => 40
  %br
  = f.label :address
  %br
  = f.text_field :address, :size => 40
  %br
  = f.label :subject
  %br
  = f.text_field :subject, :size => 40
  %br
  = f.label :body
  %br
  = f.text_area :body, :rols => 10, :cols => 60, :rows => 10
  %br
  = f.submit "Send Email", :class => "fancybox"
