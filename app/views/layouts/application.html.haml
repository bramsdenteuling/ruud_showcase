!!!
%html
  %head
    %title Ruud van Doorn
    /= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/drastic-dark/style", "web-app-theme/override"#, :cache => true
    = stylesheet_link_tag "ruud/base"
    = stylesheet_link_tag "fancybox/jquery.fancybox-1.3.4"
    = javascript_include_tag :defaults #, :cache => true
    = javascript_include_tag "jquery.textshadow"
    /%script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js", :type => "text/javascript"}
    %script{:src => "javascripts/galleria/galleria-1.2.3.min.js", :type => "text/javascript"}
    = javascript_include_tag "fancybox/jquery.fancybox-1.3.4.pack"
    = csrf_meta_tag
    :javascript
      $('#gallery').galleria({
      debug: true // debug is now on
      });
      $(document).ready(function(){
      $("h1").textShadow({
      color: "#999",
      xoffset: "1px",
      yoffset: "1px",
      radius: "1px"
      });
      $("a.fancybox").fancybox({
      'width': 400,
      'height': 400
      });
      setTimeout(function() {
      $('.flash').fadeOut('slow', function(){
      });
      }, 3000);
      });
  %body

    #container
      #wrapper.wat-cf
        #header
          #header-text
            .nav-links
              %h1
                %a{:href => "/"} Ruud van Doorn
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main-navigation
          .nav-links
            %ul.wat-cf
        #user-navigation
          .nav-links
            %ul.wat-cf
              %li
                %a{:href => contact_path}= t("web-app-theme.profile", :default => "info")
              %li
                |
              %li
                %a{:href => contact_path, :class => "fancybox"}= t("web-app-theme.profile", :default => "contact")
              %li
                = render 'devise/menu/login_items'
        #main
          = yield
          :javascript
            Galleria.loadTheme('/javascripts/galleria/themes/classic/galleria.classic.js');
            $('#gallery').galleria({
            height: 600,
            width: 960,
            imageCrop: true
            });
        #footer
          .block
            %p
              Copyright &copy; #{Time.now.year} Ruud van Doorn.
        #sidebar
          = yield :sidebar
