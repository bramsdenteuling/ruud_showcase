<div id="infoedit-form">
	<h2 class="shadow">Edit Info</h2>
  <%= form_for @info, 
                    :as => :info, 
                    :url => { :controller => :infobox, 
                              :action => :update },
                    :remote => true do |f| %>
    <p>
      <%= f.label :title %>:<br>
      <%= f.text_field :title %>
    </p>
      <%= f.label :text %>:<br>
      <%= f.text_area :text, :rows => 10 %>
    </p>
    <div id="bottom">
      <%= f.submit "Send" %>
      <div id="result"></div>
    </div>
  <% end %>
</div>
