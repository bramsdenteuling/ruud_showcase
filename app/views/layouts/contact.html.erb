<div id="contact-form">
  <%= form_for @contact_message, 
                    :as => :contact_message, 
                    :url => { :controller => :contact_messages, 
                              :action => :create },
                    :remote => true do |f| %>
    <p>
      <%= f.label :email %>:<br>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :name %>:<br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :subject %>:<br>
      <%= f.text_field :subject %>
    </p>
    <p>
      <%= f.label :message %>:<br>
      <%= f.text_area :body, :rows => 10 %>
    </p>
    <div id="bottom">
      <%= f.submit "Send" %>
      <div id="result"></div>
    </div>
  <% end %>
</div>
